<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_top">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_image_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_left"
            android:layout_marginTop="@dimen/spacing_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_image"
            tools:text="Titulo" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_vertical"
            app:layout_constraintStart_toStartOf="@id/item_title"
            app:layout_constraintTop_toBottomOf="@+id/item_title"
            tools:text="Titulo" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icon_genre"
            android:layout_width="@dimen/item_icon"
            android:layout_height="@dimen/item_icon"
            android:layout_marginTop="@dimen/spacing_vertical"
            android:layout_marginBottom="@dimen/spacing_vertical"
            app:layout_constraintStart_toStartOf="@id/item_title"
            app:layout_constraintTop_toBottomOf="@+id/item_desc"
            tools:src="@tools:sample/avatars" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/icon_genre"
            app:layout_constraintStart_toEndOf="@id/icon_genre"
            app:layout_constraintTop_toTopOf="@+id/icon_genre"
            tools:text="Sexo" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icon_cake"
            android:layout_width="@dimen/item_icon"
            android:layout_height="@dimen/item_icon"
            android:layout_marginStart="@dimen/spacing_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/icon_genre"
            app:layout_constraintStart_toEndOf="@id/item_genre"
            app:layout_constraintTop_toTopOf="@+id/icon_genre"
            tools:src="@tools:sample/avatars" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_date_born"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/icon_genre"
            app:layout_constraintStart_toEndOf="@id/icon_cake"
            app:layout_constraintTop_toTopOf="@+id/icon_genre"
            tools:text="fecha cumpleaÃ±os" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/button_favorite"
            android:layout_width="@dimen/item_icon"
            android:layout_height="@dimen/item_icon"
            app:layout_constraintBottom_toBottomOf="@id/icon_genre"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/icon_genre"
            tools:src="@tools:sample/avatars" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/button_share"
            android:layout_width="@dimen/item_icon"
            android:layout_height="@dimen/item_icon"
            android:layout_marginEnd="@dimen/spacing_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/icon_genre"
            app:layout_constraintEnd_toStartOf="@id/button_favorite"
            app:layout_constraintTop_toTopOf="@+id/icon_genre"
            tools:src="@tools:sample/avatars" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>